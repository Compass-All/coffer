#/bin/sh

ITB_DIR=${ITB_DIR:=$PWD}
MACHINE=${MACHINE:-unmatched}
BASEDIR=$(dirname "$0")

if [ ! -e ${MKIMAGE_PATH}/mkimage ]
then
  echo Please specify a valid MKIMAGE_PATH!
  exit 1
fi

if [ -e ${ITB_DIR}/u-boot.itb ]
then
  rm ${ITB_DIR}/u-boot.itb
fi
${MKIMAGE_PATH}/mkimage -E -f ${BASEDIR}/${MACHINE}/u-boot.its ${ITB_DIR}/u-boot.itb